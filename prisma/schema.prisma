generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Character {
  key        	 Int @id @default(autoincrement())
  name      	 String @unique
  createdAt 	 DateTime @default(now())
  updatedAt 	 DateTime @updatedAt
  characterID	 String @unique
  characterSheet CharacterSheet[]
  agentResearch	 AgentResearch[]
}

model CharacterSheet {
  key        	 Int @id
  character 	 Character @relation(fields: [key], references: [key])
  allianceID 	 Int
  birthday  	 DateTime
  bloodLineID 	 Int
  corporationID  Int
  description 	 String
  gender 		 String
  name 			 String @unique
  raceID 		 Int
  securityStatus Float
}

model AgentResearch {
  key			 	Int @id
  characterID	 	String @unique
  character		 	Character @relation(fields: [key], references: [key])
  agentID		 	Int
  pointsPerDay   	Float
  remainderPoints 	Float
  skillTypeID		Int
  startedAT			String
}
