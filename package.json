{
	"name": "eap",
	"version": "0.0.0",
	"description": "Eve online API Project",
	"main": "Electron/vite-build/index.es.js",
	"scripts": {
		"start": "concurrently -k \"npm run dev-react\" \"npm run build-auth\" \"npm run build-electron\"",
		"start-forge": "electron-forge start",
		"test": "vitest",
		"dev-electron": "electron ./Electron/vite-build/index.es.js",
		"dev-react": "vite ./React",
		"build-react": "vite build ./React",
		"build-electron": "vite build ./Electron",
		"build-auth": "vite build ./APICrawler",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"pack": "electron-builder --dir",
		"dist": "electron-builder build"
	},
	"author": "Dave",
	"license": "MIT",
	"devDependencies": {
		"@testing-library/react": "13.4.0",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/node": "18.11.10",
		"@types/react": "18.0.25",
		"@types/react-dom": "18.0.9",
		"@types/react-router-dom": "5.3.3",
		"@typescript-eslint/eslint-plugin": "5.45.0",
		"@typescript-eslint/parser": "5.45.0",
		"@vitejs/plugin-react": "1.3.2",
		"dotenv": "16.0.3",
		"electron": "22.0.0",
		"electron-builder": "^23.6.0",
		"eslint": "8.28.0",
		"eslint-config-vigilant-octo-train": "0.0.4",
		"eslint-plugin-react": "7.31.11",
		"jsdom": "20.0.3",
		"typescript": "4.9.3",
		"vite": "2.9.15",
		"vitest": "0.25.3"
	},
	"dependencies": {
		"axios": "^1.0.0",
		"concurrently": "^7.2.1",
		"electron-store": "^8.0.2",
		"jsonwebtoken": "^8.5.1",
		"jwks-rsa": "^3.0.0",
		"pg": "^8.8.0",
		"react": "^18.0.0",
		"react-dom": "18.2.0",
		"react-router-dom": "6.4.3"
	},
	"build": {
		"appId": "com.eap",
		"productName": "EAP",
		"directories": {
			"output": "dist"
		},
		"files": [
			"Electron/vite-build/**/*"
		],
		"extraResources": [
			".env",
			"prisma/**/*",
			"APICrawler/vite-build/ElectronEntry.es.js",
			"node_modules/**/*",
			"node_modules/@prisma/client/**/*",
			"node_modules/.prisma/**/*"
		],
		"linux": {
			"target": [
				"deb",
				"rpm",
				"AppImage",
				"snap"
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"mac": {
			"target": [
				"dmg"
			]
		}
	}
}
